<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#336666"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="兼职详情"
            android:layout_marginRight="40dp"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- 兼职详情内容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 兼职标题 -->
            <TextView
                android:id="@+id/textView_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/liji_material_blue_500"
                android:text="兼职标题:" />

            <!-- 兼职描述 -->
            <TextView
                android:id="@+id/textView_job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/liji_material_blue_500"
                android:text="兼职描述:" />

            <!-- 兼职要求 -->
            <TextView
                android:id="@+id/textView_job_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/liji_material_blue_500"
                android:text="兼职要求:" />

            <!-- 兼职薪资 -->
            <TextView
                android:id="@+id/textView_job_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/liji_material_blue_500"
                android:text="兼职薪资:" />

            <!-- 兼职联系人 -->
            <TextView
                android:id="@+id/textView_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/liji_material_blue_500"
                android:text="兼职联系人:" />

            <!-- 兼职联系电话 -->
            <TextView
                android:id="@+id/textView_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/liji_material_blue_500"
                android:text="联系电话:" />

            <!-- 方式一：ImageView控件展示单张图片 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mes1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="16dp" />

            <!-- 兼职申请按钮 -->
            <Button
                android:id="@+id/button_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="兼职申请"
                android:background="#336666"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>